<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DASHBOARD"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <!--BARIS PERTAMA-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <!--lINGKARAN PERTAMA-->
        <LinearLayout
            android:id="@+id/btn_constraint"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_red">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_home_24"/>
        </LinearLayout>

        <!--lINGKARAN KEDUA-->
        <LinearLayout
            android:id="@+id/btn_framelayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_green">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_date_range_24"/>
        </LinearLayout>
        <!--lINGKARAN KETIGA-->
        <LinearLayout
            android:id="@+id/btn_linearlayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_yellow">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_bluetooth_24"/>
        </LinearLayout>
    </LinearLayout>
    <!--BARIS KEDUA-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <!--lINGKARAN PERTAMA-->
        <LinearLayout
            android:id="@+id/btn_relativelayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_red">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_directions_car_24"/>
        </LinearLayout>
        <!--lINGKARAN KEDUA-->
        <LinearLayout
            android:id="@+id/btn_materialdesign"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_green">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_enhanced_encryption_24"/>
        </LinearLayout>
        <!--lINGKARAN KETIGA-->
        <LinearLayout
            android:id="@+id/btn_scrollview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_yellow">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_laptop_mac_24"/>
        </LinearLayout>
    </LinearLayout>
    <!--BARIS KETIGA-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <!--lINGKARAN PERTAMA-->
        <LinearLayout
            android:id="@+id/btn_scrollviewhorizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_red">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_phone_24"/>
        </LinearLayout>
        <!--lINGKARAN KEDUA-->
        <LinearLayout
            android:id="@+id/btn_tabellayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_green">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_restaurant_menu_24"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>